	</div>

	<!-- 
	      ---------------------------------------- Expense Entry Section ---------------------------------------- 
	-->
	<div id="expense-section" class="panel receipt-entry-section" style="padding:5px">
		
			<div class="row headers">
				<div class="columns large-6 show-for-large-up">
					<span>Details</span>
				</div>
				<div class="columns large-6 show-for-large-up">
					<span>Categories</span>
				</div>
				<div class="columns large-2 show-for-large-up">
					<span>Amounts</span>
				</div>
			</div>
		
				<div class="row expense-details">
				    <form method="post" action="/expense/add" >				
						<div class="columns large-6">
							<label>Receipt Date:</label>
							<input type="textbox" class="text-box" value="02/16/12" data-date-format="mm/dd/yy" id="dp1" />
							<label>Have Receipt:</label>
							<input class="have-receipt" type="checkbox" name="have-receipt" value="1" checked="checked" />
						</div>

						<div class="columns large-6 show-for-large-up">
							<select>
								<option value="benefits1" default>Benefits 1</option>
								<option value="benefits2">Benefits 2</option>
							</select>		
						</div>
						<div class="columns large-2">
							<input type="textbox" class="text-box" name="receipt-date" id="receipt-date">
						</div>
					
					</div>
				</form>
			</div>

</div>


